apiVersion: v1
kind: Secret
metadata:
  name: kafka-credentials
  labels:
    app: distributedqueue-api
type: Opaque
stringData:
  # Only needed if using Kafka mode
  # Replace with your actual Kafka credentials
  bootstrap-servers: "your-cluster.confluent.cloud:9092"
  sasl-username: "YOUR_API_KEY"
  sasl-password: "YOUR_API_SECRET"

---
# For production, use base64 encoded values:
# apiVersion: v1
# kind: Secret
# metadata:
#   name: kafka-credentials
# type: Opaque
# data:
#   bootstrap-servers: <base64-encoded-value>
#   sasl-username: <base64-encoded-value>
#   sasl-password: <base64-encoded-value>
#
# To encode values in PowerShell:
# [Convert]::ToBase64String([System.Text.Encoding]::UTF8.GetBytes("your-value"))
